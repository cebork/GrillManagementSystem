<Window x:Class="GrillFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrillFrontend"
        mc:Ignorable="d"
        Title="GRILL" Height="600" Width="900" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="/Img/4708354.jpg"/>
        </Grid.Background>
        <Button Content="Dodaj nowy grill" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.373,0.341" Height="49" Width="224" Click="ButtonNewGrill_Click" Margin="0,146,0,0" FontSize="14"/>
        <Button Content="Lista grilli" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.373,0.341" Height="48" Width="224" Click="ButtonGrillList_Click" Margin="0,247,0,0" FontSize="14"/>
        <Button Content="Lista grillowiczy" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.373,0.341" Height="48" Width="224" Click="ButtonMembersList_Click" Margin="0,341,0,0" FontSize="14"/>
    </Grid>
</Window>
