<Window x:Class="GrillFrontend.NewGrillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:GrillFrontend"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        Title="NewGrillWindow" Height="343" Width="479">
    <Grid HorizontalAlignment="Center" Width="479" Height="343" VerticalAlignment="Center" >

        <TextBox Name="Name" HorizontalAlignment="Left" Margin="44,86,0,0" TextWrapping="Wrap" Text="Grill u kefirka:ooo" Width="396" Height="24" VerticalAlignment="Top"/>
        <Button Content="Zapisz" HorizontalAlignment="Left" Margin="127,0,0,25" Width="94" Click="ButtonOK_Click" Height="26" VerticalAlignment="Bottom"/>
        <Button Content="Anuluj" Margin="251,0,120,26" Click="ButtonCancel_Click" Height="25" VerticalAlignment="Bottom"/>
        <DatePicker Name="Date" HorizontalAlignment="Left" Margin="44,141,0,0" VerticalAlignment="Top" Width="187" Height="29"/>

        <xctk:TimePicker Name="Time" Format="LongTime" HorizontalAlignment="Left" Margin="242,141,0,0" VerticalAlignment="Top" Width="198" Height="29"/>
        <Label Content="Nazwa grilla" HorizontalAlignment="Left" Margin="44,60,0,0" Width="396" Height="26" VerticalAlignment="Top"/>
        <Label Content="DODAJ NOWY GRILL" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Kiedy grill?" HorizontalAlignment="Left" Margin="44,115,0,0" Width="396" Height="26" VerticalAlignment="Top"/>
        <TextBox Name="Description" HorizontalAlignment="Left" Margin="44,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="396" Height="44"/>
        <Label Content="Opis" HorizontalAlignment="Left" Margin="44,175,0,0" Width="396" Height="25" VerticalAlignment="Top"/>

    </Grid>
</Window>
